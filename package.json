{
  "name": "@software-wanted/server",
  "version": "1.0.0",
  "description": "Express based backend application",
  "main": "index.js",
  "scripts": {
    "start": "DEBUG=socket.io* nodemon index.js 'src/**/*.js'",
    "test": "nyc mocha --timeout 60000 --recursive src",
    "test:watch": "nyc mocha --watch --timeout 60000 --recursive src",
    "lint": "jshint src"
  },
  "license": "MIT",
  "devDependencies": {
    "chai": "3.5.0",
    "chai-http": "3.0.0",
    "jshint": "2.9.4",
    "mocha": "^3.4.1",
    "mockgoose": "7.3.1",
    "nodemon": "1.11.0",
    "nyc": "^10.3.2",
    "sinon": "^2.2.0"
  },
  "dependencies": {
    "bcrypt": "1.0.2",
    "body-parser": "1.17.1",
    "compression": "1.6.2",
    "express": "^4.16.2",
    "express-bearer-token": "^2.1.1",
    "express-session": "^1.15.6",
    "joi": "^10.4.2",
    "jsonwebtoken": "^8.1.0",
    "log4js": "1.1.1"
  },
  "nyc": {
    "all": true,
    "include": [
      "src/**/*.js"
    ],
    "reporter": [
      "html",
      "text-summary"
    ],
    "exclude": [
      "src/**/*.spec.js"
    ]
  }
}
