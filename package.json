{
  "name": "@software-wanted/server",
  "version": "1.0.0",
  "description": "Express based backend application",
  "main": "index.js",
  "scripts": {
    "start": "DEBUG=socket.io* nodemon index.js 'src/**/*.js'",
    "test": "mocha --timeout 60000 --recursive src",
    "test:watch": "mocha --watch --timeout 60000 --recursive src",
    "test:coverage": "nyc mocha --timeout 60000 --recursive src",
    "lint": "eslint src",
    "ci:travis": "npm run lint && npm run test"
  },
  "license": "MIT",
  "devDependencies": {
    "chai": "3.5.0",
    "chai-http": "3.0.0",
    "cz-conventional-changelog": "^2.1.0",
    "eslint": "^4.14.0",
    "eslint-config-airbnb-base": "^12.1.0",
    "eslint-plugin-import": "^2.8.0",
    "mocha": "^3.4.1",
    "nodemon": "1.11.0",
    "nyc": "^10.3.2",
    "sinon": "^2.2.0"
  },
  "dependencies": {
    "bcrypt": "1.0.2",
    "body-parser": "1.17.1",
    "compression": "1.6.2",
    "express": "^4.16.2",
    "express-bearer-token": "^2.1.1",
    "express-session": "^1.15.6",
    "joi": "^10.4.2",
    "jsonwebtoken": "^8.1.0",
    "log4js": "1.1.1"
  },
  "nyc": {
    "all": true,
    "include": [
      "src/**/*.js"
    ],
    "reporter": [
      "html",
      "text",
      "text-summary"
    ],
    "exclude": [
      "src/**/*.spec.js"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
