{
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "script"
  },
  "env"          : {
    "es6"  : true,
    "node" : true,
    "mocha": true
  },
  "extends"      : "airbnb-base",
  "rules"        : {
    "no-multi-spaces"     : "off",
    "key-spacing"         : "off",
    "object-curly-spacing": "off",
    "arrow-parens": ["warn", "as-needed"],
    "max-len": ["error", 140],
    "prefer-destructuring": "off",
    "object-shorthand": "off",
    "object-curly-newline": "off"
  }
}
